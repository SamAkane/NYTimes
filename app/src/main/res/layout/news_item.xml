<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/card_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margins_4_dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_16sp"
            android:textColor="@color/black"
            android:layout_margin="@dimen/margins_4_dp"
            android:textAllCaps="true"
            tools:text="Category name"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margins_4_dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_20sp"
                    android:textColor="@color/black"
                    android:layout_marginRight="@dimen/margins_8_dp"
                    android:layout_marginEnd="@dimen/margins_8_dp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    tools:text="Bla bla bla bl bla bla bla bla bla bl bla bla bla bla bla bl bla bla bla"/>

                <TextView
                    android:id="@+id/preview_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_16sp"
                    android:layout_marginTop="@dimen/margins_8_dp"
                    android:layout_marginRight="@dimen/margins_8_dp"
                    android:layout_marginEnd="@dimen/margins_8_dp"
                    android:maxLines="3"
                    android:textColor="@color/black"
                    tools:text="description description description description description description description description description description"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/image"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars"/>
        </LinearLayout>
        <TextView
            android:id="@+id/publication_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_16sp"
            android:layout_margin="@dimen/margins_4_dp"
            tools:text="4 hr ago, 10:34 AM"
            />
    </LinearLayout>



</androidx.cardview.widget.CardView>